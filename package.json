{
  "name": "mkdocs-editor",
  "version": "1.0.0",
  "description": "An Electron application with Svelte and TypeScript",
  "main": "./dist/main/index.js",
  "author": "Nicholas Curl",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview --outDir=dist",
    "dev": "electron-vite dev --outDir=dist --watch",
    "build": "npm run typecheck && electron-vite build",
    "make": "electron-vite build --outDir=dist && electron-forge make",
    "package": "electron-vite build --outDir=dist && electron-forge package"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "custom-electron-titlebar": "^4.2.7",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^2.1.0",
    "@savvywombat/tailwindcss-grid-areas": "^3.1.0",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@types/node": "^18.17.5",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "daisyui": "^3.8.2",
    "electron": "^25.6.0",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-plugin-svelte": "^2.32.4",
    "postcss": "^8.4.31",
    "postcss-load-config": "^4.0.1",
    "postcss-plugin": "^1.0.0",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
